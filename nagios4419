#[root@nagios4419 koda]# /usr/lib64/nagios/plugins/check_nrpe -H 10.150.0.4 -c check_mem
#NRPE: Command 'check_mem' not defined
#[root@nagios4419 koda]# /usr/lib64/nagios/plugins/check_nrpe -H 10.150.0.4 -c check_load
